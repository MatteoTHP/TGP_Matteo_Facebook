
    <body>
        <div class="card text-center">
            
        </div>
        
       
            <% if @author.errors.any? %>
                <div class="alert alert-danger" role="alert">
                    <p>Nous n'avons pas réussi à créer le compte pour la (ou les) raison(s) suivante(s) :</p>
                    <ul>
                        <% @author.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                        <% end %>
                    </ul>
                </div>  
            <% end %>

            

            

            <h3>Crée un compte</h3>
      
        <p>entre ces infos pour créer un compte: </p>


        <%= form_tag url_for(action: 'create'), method: "post" do %>

            <%= label_tag 'First Name' %>
            <%= text_field_tag 'firstname', @author.first_name%>
            <br /> <br />

            
            <%= label_tag 'Last Name' %>
            <%= text_field_tag 'lastname', @author.last_name %>
            <br /> <br />

            <%= label_tag 'E-mail' %>
            <%= text_field_tag 'email', @author.email %>
            <br /> <br />

            <%= label_tag 'Password' %>
            <%= text_field_tag 'password', @author.password_digest %>
            <br /> <br />

           

            <%= submit_tag("Submit", :class => "btn btn-primary" ) %>

        <% end %>

       
    
    </body>